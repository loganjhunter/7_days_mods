<?xml version="1.0" encoding="UTF-8"?>
<configs>
	<!-- Increase the Hardness and MaxDamage of top layers to stop mining. Keeping snow level as is  -->
	<set xpath="/materials/material[@id='MforestGround']/property[@name='Hardness']/@value">10000</set>
	<set xpath="/materials/material[@id='MforestGround']/property[@name='MaxDamage']/@value">50000</set>
	<set xpath="/materials/material[@id='MDesertGround']/property[@name='Hardness']/@value">10000</set>
